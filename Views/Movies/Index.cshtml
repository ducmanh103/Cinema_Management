@model IEnumerable<CinemaManagement.Models.Movie>

<h2>Movies</h2>
<a asp-action="Create" class="btn btn-primary">Add Movie</a>

<table class="table mt-3">
    <tr>
        <th>Title</th>
        <th>Duration</th>
        <th>Status</th>
        <th>Genres</th>
        <th></th>
    </tr>
    @foreach (var m in Model)
    {
        <tr>
            <td>@m.Title</td>
            <td>@m.Duration</td>
            <td>@m.Status</td>
            <td>
                @string.Join(", ", m.MovieGenres.Select(g => g.Genre.GenreName))
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@m.MovieId">Edit</a> |
                <a asp-action="Delete" asp-route-id="@m.MovieId">Delete</a>
            </td>
        </tr>
    }
</table>
